<h2 class="all-lists">New List</h2>
<%= form_with model: @list, url: "/todolists", local: true, class: "form" do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <%= f.submit "投稿" %>
<% end %>

<div class="clearfix">
<% @lists.each do |list| %>
  <div class="list-box">
    <%= attachment_image_tag list, :image, :fill, 200, 200, format: "jpeg" %>
    <div class="list-comment">
      <span class="list-body"><%= list.body %></span>
      <span class="list-title"><%= link_to list.title, todolist_path(list.id) %></span>
    </div>
  </div>
<% end %>
</div>
